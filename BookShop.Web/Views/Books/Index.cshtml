@model List<EBook.Domain.DomainModels.Book>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <a class="btn btn-success" asp-action="Create">Insert New Book</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.BookImage" style="height: 50%;" alt="Image for book!">

                    <div class="card-body">
                        <h3 class="card-title">@item.BookName</h3>
                        <p class="card-text">@item.BookDescription</p>


                        <h6>Price: @item.Price ДЕН</h6>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Books" asp-action="AddBookToCart" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>
                        <a asp-controller="Books" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                    </div>
                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>


