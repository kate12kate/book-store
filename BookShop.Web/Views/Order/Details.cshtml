@{
}
@model EBook.Domain.DomainModels.Order




<div class="container">
    <div class="row">
        <a class="btn btn-success" >Order for: @Model.User.UserName</a>
    </div>

    @for (int i = 0; i < Model.BookInOrders.Count; i++)
    {
        var item = Model.BookInOrders.ElementAt(i).Book;

        if (i % 3 == 0)
        {
            @:<div class="row">
            }

            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.BookImage" style="height: 50%;" alt="Image for product!">

                    <div class="card-body">
                        <h3 class="card-title">@item.BookName</h3>
                        <p class="card-text">@item.BookDescription</p>


                        <h6>Price: $@item.Price</h6>
                    </div>

                </div>
            </div>


            if (i % 3 == 2)
            {
            @:</div>
        }
    }
</div>